<header class="text-gray-600 body-font max-w-7xl mx-auto">
  <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
    <%= link_to root_path, class: "flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0" do %>
      <svg xmlns="http://www.w3.org/2000/svg" style="background-color: rgb(2 132 199);" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 rounded-full focus:opacity-90 opacity-70 hover:opacity-90 transition duration-300" viewBox="0 0 24 24">
        <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
      </svg>
      <span class="ml-3 text-xl">Home</span>
    <% end %>
    <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
      <% if user_signed_in? %>
        <span class='mr-5 hover:text-gray-900'>
          <%= current_user&.email %>
        </span>
        <%= link_to 'Log out', destroy_user_session_path, class: "mr-5 hover:text-gray-900" %>
      <% else %>
        <%= link_to 'Log in', new_user_session_path, class: "mr-5 hover:text-gray-900" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "mr-5 hover:text-gray-900" %>
      <% end %>
    </nav>
    <!-- <button class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base mt-4 md:mt-0">Button
      <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </button> -->
  </div>
</header>
